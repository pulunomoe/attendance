{% if errors %}
	<div class="alert alert-danger alert-dismissible">
		Unable to save the data, please fix the following errors:
		<ul class="mb-0">
			{% for error in errors %}
				<li>{{ error }}</li>
			{% endfor %}
		</ul>
		<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
	</div>
{% endif %}
